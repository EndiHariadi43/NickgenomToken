{
  "name": "nickgenomtoken",
  "private": true,
  "type": "module",

  "engines": {
    "node": ">=22 <23",
    "npm": ">=10"
  },
  
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:browser": "node scripts/deploy-with-browser.js",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "deploy:bsctest": "hardhat run scripts/deploy.js --network bscTestnet",
    "verify:bsc": "hardhat verify --network bsc",
    "verify:bsctest": "hardhat verify --network bscTestnet",
    "format": "prettier --write \"**/*.{js,sol}\"",
    "format:check": "prettier --check \"**/*.{js,sol}\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@openzeppelin/contracts": "^5.0.2",
    "chai": "^4.3.7",
    "dotenv": "^16.4.5",
    "ethers": "^6.7.1",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.5",
    "hardhat": "^2.22.10",

    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.7",
    "hardhat-gas-reporter": "^1.0.10",
    "ts-node": "^10.9.2",
